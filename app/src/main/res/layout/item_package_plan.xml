<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.ryx.tdreeb.ui.fragments.trainerfragment.mypayment.PackagePlanItemViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/blue_plan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_64sdp"
        android:layout_below="@+id/tv_current_select_plan_title"
        android:background="@drawable/my_payments_blue_plan_bg">

        <TextView
            android:id="@+id/tv_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Blue"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </TextView>

        <View
            android:id="@+id/tv_plan_first_line"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/tv_plan_name"
            android:background="@color/white">

        </View>

        <TextView
            android:id="@+id/tv_plan_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/tv_plan_first_line"
            android:gravity="center"
            android:text="12 months"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <View
            android:id="@+id/tv_plan_second_line"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/tv_plan_duration"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_plan_data_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_toStartOf="@+id/btn_save"
            android:layout_toEndOf="@+id/tv_plan_second_line"
            android:text="1 GB"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/my_payment_blue_plan_btn_bg"
            android:text="AED 250"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/_9ssp"
            android:textStyle="normal" />

    </RelativeLayout>

</layout>