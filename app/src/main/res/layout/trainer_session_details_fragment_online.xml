<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/_35sdp"
        android:background="@color/upcoming_session_bg"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splash"
            android:layout_marginBottom="@dimen/_10sdp">

            <include
                android:id="@+id/custom_toolbar"
                layout="@layout/custom_toolbar_for_trainer_session_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/custom_toolbar"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/trainer_chat_layout_bg">


                <TextView
                    android:id="@+id/tv_my_session_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/trainer_session_details_online_toolbar_title"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"/>

                <RelativeLayout
                    android:id="@+id/btn_add_new_subject"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/edit_btn_bg">



                    <TextView
                        android:id="@+id/tv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trainer_session_details_online_edit_btn_title"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/red1"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold">
                    </TextView>

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_red_edit"

                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/tv_edit">
                    </ImageView>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_my_session_details_title"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/trainer_session_details_bg">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/_56sdp"
                        android:layout_height="@dimen/_56sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/dummy_image_1"
                        app:civ_border_width="@dimen/_4sdp"
                        app:civ_border_color="@color/border_color_of_toolbar_image"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sofia"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"/>

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/location"
                        android:scaleType="fitXY"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumeirah Lakes Tower,"
                        android:layout_toEndOf="@+id/location_icon"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_subject"
                        android:textSize="@dimen/_10ssp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/student_profile_image"
                        android:layout_width="@dimen/_56sdp"
                        android:layout_height="@dimen/_56sdp"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_below="@+id/location_icon"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/dummy_image"
                        app:civ_border_width="@dimen/_4sdp"
                        app:civ_border_color="@color/border_color_of_toolbar_image"/>

                    <TextView
                        android:id="@+id/tv_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emily -"
                        android:layout_toEndOf="@+id/student_profile_image"
                        android:layout_below="@+id/location_icon"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/tv_student_course_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Math"
                        android:layout_toEndOf="@+id/tv_student_name"
                        android:layout_below="@+id/location_icon"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dubai"
                        android:layout_toEndOf="@+id/tv_location"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_subject"
                        android:textSize="@dimen/_10ssp"/>



                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 hr"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                    <ImageView
                        android:id="@+id/clock_icon"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/clock_grey"
                        android:scaleType="fitXY"
                        android:layout_toStartOf="@+id/tv_hour"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_5sdp">
                    </ImageView>


                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/textcolor_upcoming_session_subject"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@+id/student_profile_image"/>

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:layout_below="@+id/line"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/textcolor_upcoming_session_subject"
                        android:layout_toEndOf="@+id/tv_day"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_20sdp"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Am"
                        android:layout_below="@+id/line"
                        android:layout_toEndOf="@+id/line1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                    <View
                        android:id="@+id/line3"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/textcolor_upcoming_session_subject"
                        android:layout_toEndOf="@+id/tv_time"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_20sdp"/>

                    <ImageView
                        android:id="@+id/iv_zoom"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/zoom1"
                        android:layout_toEndOf="@+id/line3"
                        android:layout_below="@+id/line"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp">
                    </ImageView>

                    <TextView
                        android:id="@+id/tv_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trainer_session_details_online_title"
                        android:layout_below="@+id/line"
                        android:layout_toEndOf="@+id/iv_zoom"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/sky_blue"
                        android:textSize="@dimen/_10ssp"/>

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/textcolor_upcoming_session_subject"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_below="@+id/tv_day"/>

                    <TextView
                        android:id="@+id/tv_reach_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trainer_session_details_reach_at_title"
                        android:layout_below="@+id/line2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_8ssp"/>

                    <TextView
                        android:id="@+id/tv_distance_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trainer_session_details_distance_title"
                        android:layout_below="@+id/line2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_140sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_8ssp"/>

                    <TextView
                        android:id="@+id/tv_session_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trainer_session_details_session_time_title"
                        android:layout_below="@+id/line2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_8ssp"/>

                    <TextView
                        android:id="@+id/tv_reach_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:40 am"
                        android:layout_below="@+id/tv_reach_title"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.0 km"
                        android:layout_below="@+id/tv_distance_title"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_140sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:id="@+id/tv_session_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.30 hr"
                        android:layout_below="@+id/tv_session_time_title"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/secondRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:20"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_upcoming_session_name"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:id="@+id/tv_time_am_pm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_time_1"
                            android:text="am"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_upcoming_session_name"
                            android:textSize="@dimen/_10ssp"/>

                        <TextView
                            android:id="@+id/tv_time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:45"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textAllCaps="false"
                            android:layout_centerVertical="true"
                            android:textColor="@color/textcolor_upcoming_session_name"
                            android:textSize="@dimen/_10ssp"/>

                        <TextView
                            android:id="@+id/tv_time_am_pm1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_time_2"
                            android:text="am"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_upcoming_session_name"
                            android:textSize="@dimen/_10ssp"/>

                        <LinearLayout
                            android:id="@+id/firstLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/tv_time_1">

                            <View
                                android:id="@+id/lineStarted0"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:background="@color/textcolor_upcoming_session_subject"
                                android:layout_gravity="center"
                                />


                            <RelativeLayout
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/blue_circle_bg">

                            </RelativeLayout>

                            <View
                                android:id="@+id/lineStarted1"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@color/textcolor_upcoming_session_subject"
                                android:layout_gravity="center"
                                />

                            <RelativeLayout
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/red_circle_bg">

                            </RelativeLayout>

                            <View
                                android:id="@+id/lineStarted2"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@color/textcolor_upcoming_session_subject"
                                android:layout_gravity="center"
                                />
                            <RelativeLayout
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/blue_circle_bg">

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/secondLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_toEndOf="@+id/firstLinear"
                            android:layout_marginStart="@dimen/_5sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/trainer_session_details_started_location_title"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/trainer_session_details_estimate_time_title"
                                android:textAllCaps="false"
                                android:textColor="@color/textcolor_upcoming_session_subject"
                                android:textSize="@dimen/_10ssp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:background="@drawable/edttext_my_session_hour_minute_bg"
                                    android:text=""
                                    android:gravity="center"
                                    android:textColor="@color/textcolor_upcoming_session_subject"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/trainer_session_details_hour_title"
                                    android:textAllCaps="false"
                                    android:textColor="@color/textcolor_upcoming_session_subject"
                                    android:textSize="@dimen/_14ssp"/>

                                <EditText
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:background="@drawable/edttext_my_session_hour_minute_bg"
                                    android:text=""
                                    android:gravity="center"
                                    android:textColor="@color/textcolor_upcoming_session_subject"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/trainer_session_details_min_title"
                                    android:textAllCaps="false"
                                    android:textColor="@color/textcolor_upcoming_session_subject"
                                    android:textSize="@dimen/_14ssp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="@string/trainer_session_reached_title"
                                android:textAllCaps="false"
                                android:textColor="@color/darkred"
                                android:textSize="@dimen/_10ssp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_45sdp"
                                android:text="@string/trainer_session_completed_title"
                                android:textAllCaps="false"
                                android:textColor="@color/textcolor_upcoming_session_subject"
                                android:textSize="@dimen/_10ssp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_toEndOf="@+id/secondLinear"
                            android:layout_marginStart="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_start"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_50sdp"
                                android:background="@drawable/session_details_yes_start_btn_bg"
                                android:text="@string/trainer_session_start_title"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/sky_blue"
                                android:textStyle="normal" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_yes"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:background="@drawable/session_details_yes_start_btn_bg"
                                android:text="@string/trainer_session_yes_title"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/sky_blue"
                                android:textStyle="normal" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_yes1"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@drawable/session_details_yes_start_btn_bg"
                                android:text="@string/trainer_session_yes_title"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/sky_blue"
                                android:textStyle="normal" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_loggin_in_zoom"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_below="@+id/secondRelative"
                        android:background="@drawable/profile_save_continue_bg">

                        <ImageView
                            android:id="@+id/iv_zoom_logo"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/zoom1"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_100sdp">
                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/iv_zoom_logo"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/trainer_session_details_login_zoom_title"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"/>


                    </RelativeLayout>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/layout_for_frees_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/second"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:weightSum="6">

                    <RelativeLayout

                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="match_parent"
                        android:background="@drawable/trainer_session_details_zoom_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="4">

                                <TextView
                                    android:id="@+id/tv_zoom_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/trainer_session_details_login_zoom_link_title"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp">
                                </TextView>
                                <TextView
                                    android:id="@+id/tv_zoom_link"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:text="https://www.google.com/search?q=batman&amp;rlz=1C1CHBF_enBD923BD923&amp;source=lnms&amp;tbm=isch&amp;sa=X&amp;ved=2ahUKEwiV79y0_srvAhUXX30KHY0MD74Q_AUoAXoECAUQAw#imgrc=SyFUuHgn6lSM6M"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10ssp">
                                </TextView>

                            </LinearLayout>

                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:orientation="vertical">

                               <ImageView
                                   android:id="@+id/iv_share_logo"
                                   android:layout_width="@dimen/_20sdp"
                                   android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/share"
                                   android:layout_marginStart="@dimen/_10sdp"
                                   android:layout_marginTop="@dimen/_10sdp">
                               </ImageView>

                               <TextView
                                   android:id="@+id/tv_share_title"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginStart="@dimen/_10sdp"
                                   android:layout_marginTop="@dimen/_10sdp"
                                   android:text="@string/trainer_session_details_login_share_title"
                                   android:textColor="@color/black"
                                   android:textSize="@dimen/_12ssp">
                               </TextView>

                           </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_for_free"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/trainer_session_details_copy_bg">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_copy_logo"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/copy"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp">
                            </ImageView>

                            <TextView
                                android:id="@+id/tv_copy_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/trainer_session_details_login_copy_title"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp">
                            </TextView>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_for_frees_data"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_25sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_accept"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/accept_btn_bg"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:text="@string/trainer_session_btn_msg_title"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:background="@drawable/cancel_btn_bg"
                        android:text="@string/cancel_title"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>