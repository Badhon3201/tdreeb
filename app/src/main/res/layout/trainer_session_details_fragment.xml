<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.ryx.tdreeb.ui.fragments.trainerfragment.trainersession.sessiondetails.TrainerSessionDetailsViewModel" />
    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@color/upcoming_session_bg"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/app_color">

            <include
                android:id="@+id/custom_toolbar"
                layout="@layout/custom_toolbar_trainer_my_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/custom_toolbar"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/trainer_chat_layout_bg">


                <TextView
                    android:id="@+id/tv_my_session_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:text="@string/trainer_session_details_toolbar_title"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/btn_add_new_subject"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:background="@drawable/edit_btn_bg"
                    android:onClick="@{()-> viewModel.onClickEdit()}">

                    <TextView
                        android:id="@+id/tv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="@string/trainer_session_details_online_edit_btn_title"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/red1"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/tv_edit"
                        android:src="@drawable/ic_red_edit" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_my_session_details_title"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/trainer_session_details_bg">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/teacher_image"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dummy_image_1"
                        app:civ_border_color="@color/border_color_of_toolbar_image"
                        app:civ_border_width="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/teacher_image"
                        android:text="Sofia"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/teacher_image"
                        android:scaleType="fitXY"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_toEndOf="@+id/location_icon"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_subject"
                        android:textSize="@dimen/_10ssp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/student_profile_image"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/location_icon"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/teacher_image"
                        android:src="@drawable/dummy_image"
                        app:civ_border_color="@color/border_color_of_toolbar_image"
                        app:civ_border_width="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/tv_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/location_icon"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/student_profile_image"
                        android:text="Emily -"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_student_course_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/location_icon"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:layout_toEndOf="@+id/tv_student_name"
                        android:text="Math"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_9ssp" />


                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="1 hr"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <ImageView
                        android:id="@+id/clock_icon"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/tv_hour"
                        android:scaleType="fitXY"
                        android:src="@drawable/clock_grey" />


                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/student_profile_image"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@color/textcolor_upcoming_session_subject" />

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Today"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@+id/line"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/tv_day"
                        android:background="@color/textcolor_upcoming_session_subject" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/line1"
                        android:text="11 AM"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/line3"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@+id/line"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/tv_time"
                        android:background="@color/textcolor_upcoming_session_subject" />

                    <ImageView
                        android:id="@+id/iv_zoom"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_21sdp"
                        android:layout_below="@+id/line"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/line3"
                        android:src="@drawable/zoom1" />

                    <TextView
                        android:id="@+id/tv_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/iv_zoom"
                        android:text="@string/trainer_session_details_online_title"
                        android:textAllCaps="false"
                        android:textColor="@color/sky_blue"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/tv_day"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@color/textcolor_upcoming_session_subject" />

                    <TextView
                        android:id="@+id/tv_reach_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/trainer_session_details_reach_at_title"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_distance_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:layout_marginStart="@dimen/_140sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/trainer_session_details_distance_title"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_session_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/trainer_session_details_session_time_title"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor_upcoming_session_name"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/tv_reach_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_reach_title"
                        android:layout_marginStart="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="10:40 am"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_distance_title"
                        android:layout_marginStart="@dimen/_140sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="3.0 km"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_session_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_session_time_title"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="40 min"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/secondRelative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:visibility="invisible"
                            android:text="9:20\nam"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_upcoming_session_name"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tv_time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_85sdp"
                            android:gravity="center"
                            android:text="9:45\nam"
                            android:visibility="invisible"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_upcoming_session_name"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/tv_time_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_150sdp"
                            android:gravity="center"
                            android:text="9:45\nam"
                            android:visibility="invisible"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_upcoming_session_name"
                            android:textSize="@dimen/_10ssp" />


                        <LinearLayout
                            android:id="@+id/firstLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/tv_time_1"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/lineStarted0"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:background="@color/textcolor_upcoming_session_subject" />


                            <RelativeLayout
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/blue_circle_bg">

                            </RelativeLayout>

                            <View
                                android:id="@+id/lineStarted1"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:background="@color/textcolor_upcoming_session_subject" />

                            <RelativeLayout
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/red_circle_bg">

                            </RelativeLayout>

                            <View
                                android:id="@+id/lineStarted2"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:background="@color/textcolor_upcoming_session_subject" />

                            <RelativeLayout
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/blue_circle_bg">

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/secondLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/firstLinear"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_first_step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/trainer_session_details_started_location_title"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp" />

                            <TextView
                                android:id="@+id/tv_estimate_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/trainer_session_details_estimate_time_title"
                                android:textAllCaps="false"
                                android:textColor="@color/textcolor_upcoming_session_subject"
                                android:textSize="@dimen/_10ssp" />

                            <LinearLayout
                                android:id="@+id/ll_time_contain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_hr"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/edttext_my_session_hour_minute_bg"
                                    android:gravity="center"
                                    android:text=""
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/textcolor_upcoming_session_subject"
                                    android:textSize="@dimen/_12ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/trainer_session_details_hour_title"
                                    android:textAllCaps="false"
                                    android:textColor="@color/textcolor_upcoming_session_subject"
                                    android:textSize="@dimen/_10ssp" />

                                <EditText
                                    android:id="@+id/et_mim"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:background="@drawable/edttext_my_session_hour_minute_bg"
                                    android:gravity="center"
                                    android:text=""
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/textcolor_upcoming_session_subject"
                                    android:textSize="@dimen/_12ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="@string/trainer_session_details_min_title"
                                    android:textAllCaps="false"
                                    android:textColor="@color/textcolor_upcoming_session_subject"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_second_step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:text="@string/trainer_session_reached_title"
                                android:textAllCaps="false"
                                android:textColor="@color/darkred"
                                android:textSize="@dimen/_10ssp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_45sdp"
                                android:text="@string/trainer_session_completed_title"
                                android:textAllCaps="false"
                                android:textColor="@color/textcolor_upcoming_session_subject"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/secondLinear"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_start"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:background="@drawable/session_details_yes_start_btn_bg"
                                android:text="@string/trainer_session_start_title"
                                android:onClick="@{()-> viewModel.onClickStart()}"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/sky_blue"
                                android:textSize="@dimen/_9ssp"
                                android:textStyle="normal" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_yes"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:background="@drawable/session_details_yes_start_btn_bg"
                                android:text="@string/trainer_session_yes_title"
                                android:onClick="@{()-> viewModel.onClickReached()}"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/sky_blue"
                                android:textSize="@dimen/_9ssp"
                                android:textStyle="normal" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_yes1"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginTop="@dimen/_35sdp"
                                android:background="@drawable/session_details_yes_start_btn_bg"
                                android:text="@string/trainer_session_yes_title"
                                android:onClick="@{()-> viewModel.onClickComplete()}"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/sky_blue"
                                android:textSize="@dimen/_9ssp"
                                android:textStyle="normal" />

                        </LinearLayout>
                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btn_loggin_in_zoom"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/secondRelative"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:background="@drawable/profile_save_continue_bg"
                        android:onClick="@{()-> viewModel.onClickZoom()}">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_zoom_logo"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toStartOf="@+id/tv_button_name"
                                android:src="@drawable/zoom1" />

                            <TextView
                                android:id="@+id/tv_button_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/trainer_session_details_login_zoom_title"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_view_in_map"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/secondRelative"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/profile_save_continue_bg"
                        android:text="@string/trainer_session_btn_view_map"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="normal"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_for_frees_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <RelativeLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/trainer_session_details_zoom_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_zoom_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="@string/trainer_session_details_login_zoom_link_title"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_zoom_link"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:text="https://us02web.zoom.us/j/81477549551?pwd=VHVYZXd1T0JXR1BJVlBEZCtyUjltZz09"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_9ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="@{()-> viewModel.onClickShare()}"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_share_logo"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/share" />

                                <TextView
                                    android:id="@+id/tv_share_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:text="@string/trainer_session_details_login_share_title"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_for_free"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/trainer_session_details_copy_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="@{()-> viewModel.onClickCopy()}"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_copy_logo"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/copy" />

                            <TextView
                                android:id="@+id/tv_copy_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:text="@string/trainer_session_details_login_copy_title"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_for_frees_data"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_accept"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/accept_btn_bg"
                        android:text="@string/trainer_session_btn_msg_title"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/cancel_btn_bg"
                        android:text="@string/cancel_title"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textStyle="normal" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>