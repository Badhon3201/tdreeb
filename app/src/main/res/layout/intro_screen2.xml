<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_370sdp"
        android:scaleType="fitXY"
        android:src="@drawable/splash_2"
        android:id="@+id/imageView" />
    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_title_1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20ssp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_subtitle_1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14ssp"
        android:layout_below="@+id/tv_splash_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"/>
</RelativeLayout>